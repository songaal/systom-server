<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userCoin">

    <insert id="insertUserCoin" parameterType="String">
        INSERT INTO user_coin (user_id, amount)
        VALUES ( #{param1}
               , 0
        )
    </insert>

    <update id="updateCoin" parameterType="User">
        UPDATE user_coin
           SET amount = amount + ${amount}
         WHERE user_id = #{userId}
    </update>

    <select id="getUserCoin" parameterType="String" resultType="User">
        SELECT user_id
             , amount
          FROM user_coin
         WHERE user_id = #{userId}
    </select>

</mapper>
